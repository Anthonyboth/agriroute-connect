default_platform(:ios)

platform :ios do
  desc "Build and deploy to TestFlight"
  lane :beta do
    # Configurar API Key
    app_store_connect_api_key(
      key_id: ENV["APPSTORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APPSTORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APPSTORE_CONNECT_PRIVATE_KEY"]
    )

    setup_ci

    # Configurar Git
    sh("git config --global user.name 'GitHub Actions'")
    sh("git config --global user.email 'actions@github.com'")

    #  USAR APENAS CERTIFICADOS EXISTENTES - NÃO CRIAR NOVOS
    match(
      type: "appstore",
      app_identifier: "app.lovable.f2dbc20153194f90a3cc8dd215bbebba",
      readonly: true  #  MUDAR PARA TRUE - NÃO TENTAR CRIAR
    )

    # CONFIGURAÇÃO MANUAL DO CODE SIGNING
    update_code_signing_settings(
      use_automatic_signing: false,
      path: "App.xcodeproj",
      team_id: "4YULT95XAK",
      code_sign_identity: "Apple Distribution",
      profile_name: "match AppStore app.lovable.f2dbc20153194f90a3cc8dd215bbebba"
    )

    increment_build_number(build_number: latest_testflight_build_number + 1)
    
    # Build com configuração explícita
    build_app(
      workspace: "App.xcworkspace",
      scheme: "App",
      export_method: "app-store",
      export_xcargs: "-allowProvisioningUpdates",
      export_options: {
        provisioningProfiles: { 
          "app.lovable.f2dbc20153194f90a3cc8dd215bbebba" => "match AppStore app.lovable.f2dbc20153194f90a3cc8dd215bbebba"
        },
        signingStyle: "manual",
        signingCertificate: "Apple Distribution"
      }
    )

    upload_to_testflight(skip_waiting_for_build_processing: true)
  end
end
