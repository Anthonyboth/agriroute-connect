default_platform(:ios)

platform :ios do
  desc "Build and deploy to TestFlight"
  lane :beta do
    # Configurar API Key para App Store Connect
    app_store_connect_api_key(
      key_id: ENV["APPSTORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APPSTORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APPSTORE_CONNECT_PRIVATE_KEY"],
      duration: 1200,
      in_house: false
    )

    setup_ci

    # Configurar match para certificados EXISTENTES (readonly)
    match(
      type: "appstore",
      app_identifier: "app.lovable.f2dbc20153194f90a3cc8dd215bbebba",
      readonly: true,  #  MUDAR PARA TRUE - usar certificados existentes
      keychain_name: "fastlane_tmp_keychain",
      keychain_password: "",
      force: false,
      clone_branch_directly: false
    )

    # Obter último build number do TestFlight
    build_number = latest_testflight_build_number
    if build_number.nil?
      build_number = 1
    else
      build_number += 1
    end
    
    increment_build_number(
      build_number: build_number
    )

    # Build app com code signing manual
    build_app(
      workspace: "App.xcworkspace",
      scheme: "App",
      export_method: "app-store",
      export_xcargs: "-allowProvisioningUpdates",
      clean: true,
      export_options: {
        provisioningProfiles: { 
          "app.lovable.f2dbc20153194f90a3cc8dd215bbebba" => "match AppStore app.lovable.f2dbc20153194f90a3cc8dd215bbebba"
        },
        signingStyle: "manual"
      }
    )

    # Upload para TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end
