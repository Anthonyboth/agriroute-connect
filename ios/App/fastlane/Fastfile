default_platform(:ios)

platform :ios do
  desc "Build and deploy to TestFlight"
  lane :beta do
    # Configurar API Key
    app_store_connect_api_key(
      key_id: ENV["APPSTORE_CONNECT_KEY_ID"],
      issuer_id: ENV["APPSTORE_CONNECT_ISSUER_ID"],
      key_content: ENV["APPSTORE_CONNECT_PRIVATE_KEY"]
    )

    setup_ci

    # NÃO USAR MATCH - usar certificados que já existem na Apple Developer
    # Os certificados de 25/11/2026 já estão disponíveis na sua conta

    increment_build_number(build_number: latest_testflight_build_number + 1)
    
    # Build com code signing AUTOMÁTICO - vai usar certificados existentes
    build_app(
      workspace: "App.xcworkspace",
      scheme: "App",
      export_method: "app-store",
      export_xcargs: "-allowProvisioningUpdates"
    )

    upload_to_testflight(skip_waiting_for_build_processing: true)
  end
end
