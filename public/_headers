# Security headers
/*
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Content-Type-Options: nosniff
  X-Frame-Options: SAMEORIGIN
  Referrer-Policy: strict-origin-when-cross-origin

# Don't cache HTML files (always get fresh content)
/*.html
  Cache-Control: public, max-age=0, must-revalidate
  Vary: Accept-Encoding

/
  Cache-Control: public, max-age=0, must-revalidate
  Vary: Accept-Encoding

# Cache all static assets in /assets/ for 1 year (immutable files with hash in filename)
/assets/*
  Cache-Control: public, max-age=31536000, s-maxage=31536000, immutable

# Cache root-level images for 1 year
/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable

/*.ico
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts for 1 year
/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/*.woff
  Cache-Control: public, max-age=31536000, immutable

# Cache manifest and config files for 1 day
/*.webmanifest
  Cache-Control: public, max-age=86400

/*.xml
  Cache-Control: public, max-age=86400

/*.txt
  Cache-Control: public, max-age=86400

# Cache JavaScript files for 1 year with compression
/*.js
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Cache CSS files for 1 year with compression
/*.css
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding
