# Immutable hashed assets in /assets/ folder - 1 year cache (HIGHEST PRIORITY)
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Hero LCP image - aggressive caching
/hero-truck-night-moon.webp
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Service Worker files - no cache to ensure updates
/registerSW.js
  Cache-Control: public, max-age=0, must-revalidate

/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# HTML files - no cache (always get fresh content)
/index.html
  Cache-Control: public, max-age=0, must-revalidate
  Vary: Accept-Encoding

/
  Cache-Control: public, max-age=0, must-revalidate
  Vary: Accept-Encoding

